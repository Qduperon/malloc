#==============================================================================#
#                               // NAME \\                                     #
#==============================================================================#

ifeq ($(HOSTTYPE),)
	HOSTTYPE := $(shell uname -m)_$(shell uname -s)
endif

NAME = libft_malloc_$(HOSTTYPE).so

LINK = libft_malloc.so


#==============================================================================#
#                           //  VARIABLES  \\                                  #
#==============================================================================#

LIBFTDIR = libft/

LIBFT = libft/libft.a

INCSDIR = includes/

SRCSDIR = srcs/

OBJSDIR = objs/

CC = gcc

FLAGS = -Wall -Werror -Wextra

SRCS =	free.c \
		get.c \
		init.c \
		malloc.c \
		realloc.c \
		search.c \
		show.c

#==============================================================================#
#                             // OBJECTS \\                                    #
#==============================================================================#

OBJS = $(addprefix $(OBJSDIR),$(SRCS:.c=.o))

#==============================================================================#
#                            // COMPILATION \\                                 #
#==============================================================================#

$(OBJSDIR)%.o: $(SRCSDIR)%.c
	mkdir -p $(OBJSDIR)
	make -C libft
	$(CC) $(CFLAGS) -fPIC -I $(INCSDIR) -I libft/includes -o $@ -c $<
	ln -sf $(NAME) $(LINK)

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(FLAGS) -shared -o $(NAME) $(OBJS) -L./libft -lft

#==============================================================================#
#                              // DELETING \\                                  #
#==============================================================================#

clean:
	make clean -C libft
	rm -rf $(OBJSDIR)

fclean: clean
	make fclean -C libft
	rm -f $(NAME) $(LINK)

#==============================================================================#
#                             // RETRY \\                                      #
#==============================================================================#

re: fclean all

.PHONY : all clean fclean re
